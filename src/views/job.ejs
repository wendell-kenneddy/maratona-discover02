<!DOCTYPE html>
<html lang="pt-BR">

<!-- Includes the head meta tags -->

<%- include('./includes/meta-head.ejs', {
  pageTitle: 'JobsCalc | Adicionar Novo Job',
  styleHrefs: [
    '/styles/main.css',
    '/styles/partials/page-header.css',
    '/styles/partials/cards.css',
    '/styles/partials/buttons.css',
    '/styles/partials/forms.css',
    '/styles/partials/animations.css',
    '/styles/pages/job.css'
  ]
});  %>

<body id="page-job">

  <!-- Includes the page-header -->

  <%- include('./includes/header.ejs', { title: 'Adicionar Novo Job'});  %>

  <div class="container flex animate-up delay-2">
    <main>
      <form id="form-job" action="/job" method="POST">
        <fieldset>
          <legend>Dados do Job</legend>
          <div class="separator light"></div>

          <div class="input-wrapper">
            <label for="name">Nome do Job</label>
            <input type="text" id="name" name="name" />
          </div>

          <div class="input-group">
            <div class="input-wrapper">
              <label for="daily-hours">Quantas horas <br />
                por dia vai dedicar ao job?</label>
              <input type="number" step="0.1" id="daily-hours"
                name="daily-hours" />
            </div>

            <div class="input-wrapper">
              <label for="total-hours">Estimativa de <br />
                horas para esse Job?</label>
              <input type="number" id="total-hours" name="total-hours" />
            </div>
          </div>
        </fieldset>

      </form>
    </main>
    <aside class="card">
      <img src="/images/money-gray.svg" alt="Imagem de Dinheiro">
      <p>
        Preencha os dados ao lado para
        ver o valor do projeto
      </p>
      <div class="button-group">
        <button class="button green" form="form-job" type="submit"
          title="Salvar Dados">Salvar</button>
        <a href="index.html" class="button gray">
          <img src="/images/trash-24.svg" alt="Cancelar cadastro"
            title="Cancelar cadastro">
        </a>
      </div>
    </aside>

  </div>
  <!-- end container -->
</body>

</html>